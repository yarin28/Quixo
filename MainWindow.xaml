<Window x:Class="Quixo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quixo"
        mc:Ignorable="d"
        Title="Quxio" Height="450" Width="800" ContentRendered="Window_ContentRendered"  >

    <Canvas Name="mainWinow" ClipToBounds="True"  Background="#E1E1E1" >
        <Canvas Name="GameArea" ClipToBounds="True" Width="400" Height="400" MouseLeftButtonDown="GameArea_MouseLeftButtonDown" Background="#E1c16E" Canvas.Left="202" Canvas.Top="4" HorizontalAlignment="Center" VerticalAlignment="Center"  />
        <Label Content="Quixo" Height="72" Canvas.Left="12" Canvas.Top="11" Width="116" Foreground="#FF765252" FontSize="36" FontWeight="Bold" FontStyle="Normal"/>
        <Label Content="winning player - " Canvas.Left="14" Canvas.Top="96"/>
        <Label Content="current player - " Canvas.Left="20" Canvas.Top="68"/>
        <Button Content="About" Height="47" Canvas.Left="15" Canvas.Top="364" Width="86" Style="{StaticResource buttonStyle3}" Click="Button_Click_1"/>
        <Button Content="Game rules" Height="47" Width="114" FontSize="20" FontFamily="Segoe UI Bold" Style="{StaticResource ButtonStyle}" Canvas.Left="8" Canvas.Top="303" Click="Button_Click"/>
        <DataGrid Height="386" Width="176" AlternatingRowBackground="LightSalmon" CanUserAddRows="False" d:ItemsSource="{d:SampleData ItemCount=15}" Canvas.Left="605" Canvas.Top="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="number">
                </DataGridTextColumn>

            </DataGrid.Columns>
        
        </DataGrid>
    </Canvas>
</Window>
